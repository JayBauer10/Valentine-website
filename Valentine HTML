<div class="section" id="proposal">
    <h2>Omoyosola‚Ä¶ will you be my Valentine?</h2>
    <button class="btn" id="yesBtn">üíï Yes</button>
    <button class="btn" id="noBtn">üòå Maybe / No</button>
    <div id="loveNote">
        *‚ÄúYou make my world sweeter every day, and I can‚Äôt wait to make you smile forever. üíñ‚Äù*
    </div>
</div>

<script>
// Buttons & Love Note
const yesBtn=document.getElementById('yesBtn');
const noBtn=document.getElementById('noBtn');
const loveNote=document.getElementById('loveNote');
const audio=document.getElementById('bgMusic');

// Slideshow with smooth fade
let slides = document.querySelectorAll('#carousel .slide');
let current = 0;
setInterval(()=>{
    slides[current].classList.remove('active');
    current = (current+1) % slides.length;
    slides[current].classList.add('active');
}, 3000);

// Music-synced fireworks + confetti + heart pulse
yesBtn.addEventListener('click',()=>{
    audio.play();
    const interval = setInterval(()=>{
        const time = audio.currentTime;
        if(time>0 && time<audio.duration){
            triggerFirework();
            triggerConfetti();
            pulseHearts();
        }else{ clearInterval(interval); }
    },500); 
    alert("I knew you‚Äôd say yes üòç");
});

// Fireworks
function triggerFirework(){
    for(let i=0;i<5;i++){ createFirework(Math.random()*window.innerWidth, Math.random()*window.innerHeight/2); }
}

// Confetti
function triggerConfetti(){
    for(let i=0;i<20;i++){
        let confetti=document.createElement('div');
        confetti.classList.add('confetti');
        confetti.style.left=Math.random()*window.innerWidth+'px';
        confetti.style.backgroundColor=`hsl(${Math.random()*360},100%,50%)`;
        confetti.style.animationDuration=(1+Math.random()*2)+'s';
        document.body.appendChild(confetti);
        setTimeout(()=>{ confetti.remove(); },2000);
    }
}

// Firework helper
function createFirework(x,y){
    for(let i=0;i<20;i++){
        let fire=document.createElement('div');
        fire.style.position='absolute';
        fire.style.left=x+'px'; fire.style.top=y+'px';
        fire.style.width=fire.style.height='8px';
        fire.style.backgroundColor=`hsl(${Math.random()*360},100%,50%)`;
        fire.style.borderRadius='50%';
        fire.style.pointerEvents='none';
        document.body.appendChild(fire);
        let angle=Math.random()*2*Math.PI; let speed=2+Math.random()*5;
        let dx=Math.cos(angle)*speed; let dy=Math.sin(angle)*speed;
        let id=setInterval(()=>{
            let left=parseFloat(fire.style.left); let top=parseFloat(fire.style.top);
            fire.style.left=left+dx+'px'; fire.style.top=top+dy+'px';
            fire.style.opacity-=0.02;
            if(fire.style.opacity<=0){ fire.remove(); clearInterval(id);}
        },20);
    }
}

// Heart pulse function
function pulseHearts(){
    hearts.forEach((heart,i)=>{
        const scale = 1 + Math.sin(Date.now()/200 + i)/4;
        const hue = (Date.now()/10 + i*20)%360;
        heart.style.transform = `rotate(-45deg) scale(${scale})`;
        heart.style.backgroundColor = `hsl(${hue},100%,50%)`;
    });
}

// No button runs away
noBtn.addEventListener('mouseover',()=>{
    const x=Math.random()*window.innerWidth-100;
    const y=Math.random()*window.innerHeight-100;
    noBtn.style.position='absolute'; noBtn.style.left=x+'px'; noBtn.style.top=y+'px';
});

// Scroll reveal
const sections=document.querySelectorAll('.section');
window.addEventListener('scroll',()=>{
    const triggerBottom=window.innerHeight/5*4;
    sections.forEach(section=>{
        const boxTop=section.getBoundingClientRect().top;
        if(boxTop<triggerBottom){ section.classList.add('visible'); }
    });
});

// Hidden love note toggle
document.getElementById('hero').addEventListener('dblclick',()=>{
    loveNote.style.display = loveNote.style.display==='none'?'block':'none';
});
</script>

