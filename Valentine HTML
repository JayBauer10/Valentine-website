.btn:hover{transform:scale(1.1);box-shadow:0 0 15px rgba(233,30,99,0.6);}

/* ===== Floating Hearts ===== */
.heart{position:absolute;width:20px;height:20px;background:red;transform:rotate(-45deg);animation:float 5s infinite linear;}
